{% if pages > 1 %}

    <ul class="pagination pull-right">
        {% if current == 1 %}
            <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>

        {% else %}
            <li class="page-item "><a class="page-link" href="{{ url }}/{{ current - 1 }}">Previous</a></li>

        {% endif %}

        {% if pages > 4 %}
            {% if current == 1 or  current >= pages-1 %}
                {% for i in 1..2 %}
                    {% if current == i %}
                        <li class="page-item active"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                    {% endif %}
                {% endfor %}
            {% else %}
                {% for i in current-1..current %}
                    {% if current == i %}
                        <li class="page-item active"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                    {% else %}
                        <li class="page-item"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                    {% endif %}
                {% endfor %}
            {% endif %}

            <li class="page-item disabled"><a class="page-link">....</a></li>

            {% for i in pages-1..pages %}
                {% if current == i %}
                    <li class="page-item active"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                {% endif %}
            {% endfor %}
        {% else %}
            {% for i in 1..pages %}
                {% if current == i %}
                    <li class="page-item active"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ url }}/{{ i }}">{{ i }}</a></li>

                {% endif %}
            {% endfor %}
        {% endif %}
        {% if current == pages %}
            <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>

        {% else %}
            <li class="page-item "><a class="page-link" href="{{ url }}/{{ current + 1 }}">Next</a></li>

        {% endif %}
    </ul>
{% endif %}